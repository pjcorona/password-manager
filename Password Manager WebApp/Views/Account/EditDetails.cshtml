@model Password_Manager_WebApp.Models.ViewModels.EditAccountViewModel

@{
    ViewBag.Title = "Edit Account Details";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    @Html.HiddenFor(model => model.AccountEntry.AccountDetails.AccountID)

    <div class="card new-account-card mb-3">
        <div class="card-header">
            <span class="h3">Edit Details</span>
            <div class="float-right">
                @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-danger" })
                <input type="submit" value="Save" class="btn btn-success" />
            </div>
        </div>
        <div class="card-body">

            <div class="form-group row">
                @Html.LabelFor(model => model.AccountEntry.AccountDetails.ApplicationName, new { @class = "col-sm-4 col-form-label" })
                <div class="col-md-8">
                    @Html.TextBoxFor(model => model.AccountEntry.AccountDetails.ApplicationName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.AccountEntry.AccountDetails.ApplicationName)
                </div>
            </div>


            <div class="form-group row">
                @Html.LabelFor(model => model.AccountEntry.AccountDetails.EmailAddress, new { @class = "col-sm-4 col-form-label" })
                <div class="col-md-8">
                    @Html.TextBoxFor(model => model.AccountEntry.AccountDetails.EmailAddress, new { @class = "form-control" })

                    @Html.ValidationMessageFor(model => model.AccountEntry.AccountDetails.EmailAddress)
                </div>
            </div>

            <div class="form-group row">
                @Html.LabelFor(model => model.AccountEntry.AccountDetails.Username, new { @class = "col-sm-4 col-form-label" })
                <div class="col-md-8">
                    @Html.TextBoxFor(model => model.AccountEntry.AccountDetails.Username, new { @class = "form-control" })

                    @Html.ValidationMessageFor(model => model.AccountEntry.AccountDetails.Username)
                </div>
            </div>

            <div class="form-group row">
                @Html.LabelFor(model => model.AccountEntry.AccountDetails.MobileNumber, new { @class = "col-sm-4 col-form-label" })
                <div class="col-md-8">
                    @Html.TextBoxFor(model => model.AccountEntry.AccountDetails.MobileNumber, new { @class = "form-control" })

                    @Html.ValidationMessageFor(model => model.AccountEntry.AccountDetails.MobileNumber)
                </div>
            </div>

            <div class="form-group row">
                @Html.LabelFor(model => model.AccountEntry.AccountDetails.Status, new { @class = "col-sm-4 col-form-label" })
                <div class="col-md-8">
                    @Html.DropDownListFor(model => model.AccountEntry.AccountDetails.Status, 
                    new List<SelectListItem> {
                        new SelectListItem { Value = "Active" , Text = "Active" },
                        new SelectListItem { Value = "Inactive" , Text = "Inactive" }
                    },
                    new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.AccountEntry.AccountDetails.Status)
                </div>
            </div>

            <hr />
            <div class="form-group row">
                <label class="col-md-4">&nbsp;</label>
                <div class="col-md-8">
                    <div class="custom-control custom-checkbox">
                        @Html.CheckBoxFor(model => model.ChangePasswordFlag, new { @class = "custom-control-input", @id = "myCheckBox" })
                        <label class="custom-control-label" for="myCheckBox">
                            Change Password
                        </label>
                    </div>
                </div>
            </div>

            <div class="password-inputs" style="display: none">
                <div class="form-group row">
                    @Html.LabelFor(model => model.AccountEntry.Password, new { @class = "col-sm-4 col-form-label" })
                    <div class="col-md-8">
                        <div class="input-group" id="show-hide-password">
                            @Html.TextBoxFor(model => model.AccountEntry.Password, new { @type = "password", @class = "form-control new-password passwords-entry" })
                            <div class="input-group-append">
                                <span class="input-group-text my-toggle" style="cursor: pointer">
                                    <i class="fas fa-eye" aria-hidden="true"></i>
                                </span>
                            </div>
                        </div>
                        @Html.ValidationMessageFor(model => model.AccountEntry.Password)
                    </div>
                </div>
                
                <div class="form-group row">
                    <label class="col-md-4 control-label">Repeat New Password</label>
                    <div class="col-md-8">
                        @Html.PasswordFor(model => model.AccountEntry.RepeatPassword, new { @class = "form-control repeat-new-password passwords-entry" })
                        @Html.ValidationMessageFor(model => model.AccountEntry.RepeatPassword)
                    </div>
                </div>
            </div>
        </div>


    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
