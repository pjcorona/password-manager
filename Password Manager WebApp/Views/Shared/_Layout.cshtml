<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/bundles/css")

</head>
<body class="my-body">

    <nav class="navbar navbar-expand-md navbar-dark bg-dark my-navbar">
        <span class="navbar-brand">Password Manager</span>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExampleDefault" aria-controls="navbarsExampleDefault" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarsExampleDefault">
            <ul class="navbar-nav">
                <li class="nav-item">
                    @Html.ActionLink("Accounts", "Index", "Account", null, new { @class = "nav-link" })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("New Account", "NewAccount", "Account", null, new { @class = "nav-link" })
                </li>
            </ul>
            <ul class="navbar-nav ml-auto">
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="https://example.com" id="dropdown03" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">@User.Identity.Name</a>
                    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdown03">
                        <a class="dropdown-item" href="@Url.Action("ChangeUsername", "Access")">Change Username</a>
                        <a class="dropdown-item" href="@Url.Action("ChangePassword", "Access")">Change Password</a>
                        <div class="dropdown-divider"></div>
                        @using (Html.BeginForm("Logout", "Access", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
                        {
                            @Html.AntiForgeryToken()
                            <a class="dropdown-item" href="javascript:document.getElementById('logoutForm').submit()">Log out</a>
                        }
                    </div>
                </li>
            </ul>
        </div>
    </nav>

    <main role="main" class="container">

        @RenderBody()

    </main>

    
    <footer class="my-footer">
        <span>&copy; 2018 - Password Manager</span>
    </footer>

    @Scripts.Render("~/bundles/js")
    @RenderSection("scripts", required: false)

</body>
</html>
