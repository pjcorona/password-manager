@model Password_Manager_WebApp.Models.ViewModels.ChangePasswordViewModel

@{
    ViewBag.Title = "Change Password";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()


    <div class="card w-50 m-auto">
        <div class="card-header">
            <h5>Change Password</h5>
        </div>
        <div class="card-body">

            <div class="form-group row">
                @Html.LabelFor(model => model.CurrentPassword, new { @class = "col-sm-4 col-form-label" })
                <div class="col-md-8">
                    @Html.PasswordFor(model => model.CurrentPassword, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.CurrentPassword)
                    @Html.ValidationMessage("InvalidCurrentPassword")
                </div>
            </div>

            <div class="form-group row">
                @Html.LabelFor(model => model.NewPassword, new { @class = "col-sm-4 col-form-label" })
                <div class="col-md-8">
                    <div class="input-group" id="show-hide-password">
                        @Html.PasswordFor(model => model.NewPassword, new { @type = "password", @class = "form-control" })
                        <div class="input-group-append">
                            <span class="input-group-text my-toggle" style="cursor: pointer">
                                <i class="fas fa-eye" aria-hidden="true"></i>
                            </span>
                        </div>
                    </div>
                    @Html.ValidationMessageFor(model => model.NewPassword)
                    @Html.ValidationMessage("PasswordMinimumLength")
                </div>
            </div>

            <div class="form-group row">
                @Html.LabelFor(model => model.RepeatPassword, new { @class = "col-sm-4 col-form-label" })
                <div class="col-md-8">
                    @Html.PasswordFor(model => model.RepeatPassword, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.RepeatPassword)
                </div>
            </div>
        </div>
        <div class="card-footer">
            <div class="float-right">
                <input type="submit" value="Save" class="btn btn-success" />
            </div>
        </div>
    </div>

}